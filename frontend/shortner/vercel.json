{
  "buildCommand": "npm run build",
  "outputDirectory": "./build",
  "installCommand": "npm install",
  "framework": "create-react-app",
  "functions": {
    "pages/**": {
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://yourdomain.com/api/:path*"
    }
  ],
  "headers": [
    {
      "source": "/static/:path*",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "max-age=31536000, immutable"
        }
      ]
    }
  ]
}
